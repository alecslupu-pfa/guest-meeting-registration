<%= decidim_form_for(@form, html: { class: "form edit_organization" }, url: guest_meeting_settings_path) do |f| %>
  <div class="card">
    <div class="card-divider">
      <h2 class="card-title"><%= t ".title" %></h2>
    </div>
    <div class="card-section">
      <div class="wrapper">
        <div class="row">
          <div class="field">
            <%= f.check_box :enable_guest_registration, help_text: t("enable_guest_registration_help_html", scope:"decidim.guest_meeting_registration.admin.guest_meeting_session") %>
          </div>
          <div class="field">
            <%= f.check_box :enable_registration_confirmation, help_text: t("enable_registration_confirmation_help_html", scope:"decidim.guest_meeting_registration.admin.guest_meeting_session") %>
          </div>
          <div class="field">
            <%= f.check_box :enable_cancellation, help_text: t("enable_cancellation_help_html", scope:"decidim.guest_meeting_registration.admin.guest_meeting_session") %>
          </div>
          <div class="field">
            <%= f.check_box :disable_account_confirmation, help_text: t("disable_account_confirmation_html", scope:"decidim.guest_meeting_registration.admin.guest_meeting_session") %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="button--double form-general-submit">
    <%= f.submit t(".update") %>
  </div>
<% end %>
