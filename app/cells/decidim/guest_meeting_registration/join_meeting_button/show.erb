<%#= render :registration_confirm %>
<%= action_authorized_button_to(
      :join,
      i18n_join_text,
      "#",
      class: button_classes,
      disabled: !has_available_slots?,
      data: { open: current_user.present? ? "meeting-registration-confirm-#{model.id}" : "loginModal" }
    ) %>

<% if shows_remaining_slots? %>
  <span><%= t("remaining_slots", scope: "decidim.meetings.meetings.show", count: remaining_slots) %></span>
<% end %>